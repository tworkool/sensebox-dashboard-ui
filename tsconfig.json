{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" },
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,  // (optional) if you don't want TS to type-check JS files
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@public/*": ["public/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@stores": ["src/stores/*"],
      "@api/*": ["src/api/*"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
